<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/yellow"/>
                    <stroke android:color="@color/DarkYellow" android:width="3dp"/>
                </shape>
            </item>
            <item
                android:gravity="top|left"
                android:left="5dp"
                android:top="5dp"
                android:width="5dp"
                android:height="5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/DarkYellow"/>
                </shape>
            </item>

            <item
                android:gravity="top|right"
                android:top="5dp"
                android:right="5dp"
                android:width="5dp"
                android:height="5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/DarkYellow"/>
                </shape>
            </item>
            <item
                android:gravity="bottom|left"
                android:bottom="5dp"
                android:left="5dp"
                android:width="5dp"
                android:height="5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/DarkYellow"/>
                </shape>
            </item>
            <item
                android:gravity="bottom|right"
                android:bottom="5dp"
                android:right="5dp"
                android:width="5dp"
                android:height="5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/DarkYellow"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>